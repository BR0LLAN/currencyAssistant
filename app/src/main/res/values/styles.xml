<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBarStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AutoCompTVCustom">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:imeOptions">actionNone</item>
    </style>

    <style name="FieldCurrencyValueCustom">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@null</item>
    </style>
</resources>